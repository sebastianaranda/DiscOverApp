<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ArtistProfileFragment"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
<!--    TODO: Pasar a Constraint antes de terminar esta pantalla-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_artist_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/img_artist_placeholder"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#BF111A21"
            >

            <TextView
                android:id="@+id/txt_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                tools:text="Nombre Artista"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/txt_artist_years_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                tools:text="1980 - Presente"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_artist_fans"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_keyboard_arrow_right"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>